<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- 日志文件路径 -->
    <Properties>
        <Property name="LOG_PATH">logs</Property>
        <Property name="LOG_NAME">app</Property>
    </Properties>

    <Appenders>

        <!-- 控制台输出（你原来的，未动） -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                    charset="UTF-8"
                    disableAnsi="false"
                    pattern="%style{%d{HH:mm:ss.SSS}}{Magenta} %style{|-}{White}%highlight{%-5p} [%t] %style{%40.40c}{Cyan}:%style{%-3L}{Blue} %style{-|}{White} %m%n%rEx{filters(jdk.internal.reflect,java.lang.reflect,sun.reflect)}"/>
        </Console>

        <!-- 文件输出（滚动文件） -->
        <RollingFile
                name="FileAppender"
                fileName="${LOG_PATH}/${LOG_NAME}.log"
                filePattern="${LOG_PATH}/${LOG_NAME}-%d{yyyy-MM-dd}.log.gz">

            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %c:%L - %m%n%throwable"/>

            <!-- 按天滚动 -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>

            <!-- 保留 14 天 -->
            <DefaultRolloverStrategy max="14"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>

        <!-- 降低 Dubbo / Zookeeper 噪音 -->
        <Logger name="org.apache.zookeeper" level="warn"/>
        <Logger name="org.apache.dubbo.registry.zookeeper" level="warn"/>
        <Logger name="org.apache.dubbo.config.deploy" level="warn"/>
        <Logger name="org.apache.dubbo.registry.client" level="warn"/>
        <Logger name="org.apache.dubbo.rpc.model" level="warn"/>

    </Loggers>
</Configuration>
